            @Html.LabelFor(model => model.estadoActual, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownListFor(model => model.estadoActual, items, "--Select--", new { htmlAttributes = new { @class = "form-control" } })
